<div class="flex flex-col p-2 bg-white rounded-lg shadow-md gap-4">
  <!--TODO: Make these into partials or components later-->
  <div class="flex gap-4">
    <div class="flex flex-col w-1/2">
      <%= render partial: 'currency_dropdown', locals: { label: 'From:', currency_type: 'base', selected_currency: base_currency } %>
    </div>

    <div class="flex items-center justify-center mt-5">
      <button type="button"
              data-action="click->income-forecast#swapCurrencies"
              class="px-3 py-1 mt-1 border border-transparent text-lg font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 whitespace-nowrap">
        &#x21C4;
      </button>
    </div>

    <div class="flex flex-col w-1/2">
      <%= render partial: 'currency_dropdown', locals: { label: 'To:', currency_type: 'quote', selected_currency: quote_currency } %>
    </div>
  </div>

  <div class="flex flex-col w-full">
    <div class="flex items-center justify-end text-sm font-medium text-gray-700">
      Exchange Rate:
    </div>
    <div class="flex items-center justify-end mt-1 text-lg font-semibold text-gray-900">
      <%= render partial: 'conversion_rate', locals: { conversion_rate: conversion_rate } %>
    </div>
  </div>
</div>
