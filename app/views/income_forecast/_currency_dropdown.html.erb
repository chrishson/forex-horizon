<label for="<%= currency_type %>" class="block text-sm font-medium text-gray-700"><%= label %></label>
<select id="<%= currency_type %>"
        data-income-forecast-target="<%= "#{currency_type}Currency" %>"
        data-action="change->income-forecast#updateConversionRate"
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
  <!--TODO: Replace with API currencies later.-->
  <option value="USD" <%= 'selected' if selected_currency == 'USD' %>>USD</option>
  <option value="CAD" <%= 'selected' if selected_currency == 'CAD' %>>CAD</option>
</select>
