<%= form_with url: income_forecast_path, method: :post, data: { turbo: true } do |form| %>
  <div>
    <%= form.label :conversion_rate, 'Base:Quote Conversion Rate' %>
    <%= form.number_field :conversion_rate, step: 0.01, data: { income_forecast_target: "conversionRateInput" } %>
    <button type="button" data-action="click->income-forecast#update">Use Live Rate</button>
  </div>

  <div>
    <%= form.label :hours_per_day, 'Hours Per Day' %>
    <%= form.number_field :hours_per_day, step: 0.01 %>
  </div>

  <div>
    <%= form.label :hourly_rate_dollars, 'Hourly Rate' %>
    <%= form.number_field :hourly_rate_dollars, step: 0.01 %>
  </div>

  <div>
    <%= form.submit 'Forecast My Income' %>
  </div>
<% end %>